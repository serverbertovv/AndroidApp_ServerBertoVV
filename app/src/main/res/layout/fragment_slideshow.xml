<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Titolo della pagina -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informazioni sull'App"
        android:textSize="24sp"
        android:textAlignment="center"
        android:paddingBottom="16dp" />

    <!-- Descrizione dell'App -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Questa è una semplice app Android sviluppata per dimostrare l'utilizzo delle funzionalità base."
        android:textSize="16sp"
        android:paddingBottom="16dp" />

    <!-- Versione dell'app e data di rilascio -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patch 0.6 - 29 aprile 2025"
        android:textSize="16sp"
        android:paddingTop="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Codice Open-Source on GitHub"
        android:textSize="16sp"
        android:paddingTop="16dp" />

</LinearLayout>
