<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_marginBottom="16dp"
            android:src="@drawable/serverbertovv"
            android:contentDescription="Logo"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:adjustViewBounds="true"
            />

        <!-- Titolo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informazioni sull'App"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Descrizione -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Questa Ã¨ una semplice app Android in sviluppo per il ServerBertoVV."
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Versione -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Patch 0.71 - 3 Luglio 2025"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Icone link social -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/siteLink"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:contentDescription="Sito" />

            <ImageView
                android:id="@+id/instagramLink"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:contentDescription="Instagram" />

            <ImageView
                android:id="@+id/youtubeLink"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:contentDescription="YouTube" />

            <ImageView
                android:id="@+id/discordLink"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:contentDescription="Discord" />

            <ImageView
                android:id="@+id/githubLink"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:contentDescription="GitHub" />
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp">

            <!-- Testo iniziale "Codice" -->
            <TextView
                android:id="@+id/text_start"
                android:text="Codice "
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Link "Open-Source" -->
            <TextView
                android:id="@+id/link_open_source"
                android:text="Open-Source"
                android:textColor="@color/teal_700"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:clickable="true"
                android:focusable="true" />

            <!-- Testo " di " -->
            <TextView
                android:id="@+id/text_di"
                android:text=" di "
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Immagine avatar tonda -->
            <ImageView
                android:id="@+id/avatar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Avatar di PredestinatoNew"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />

            <!-- Link "PredestinatoNew" -->
            <TextView
                android:id="@+id/link_predestinato"
                android:text="PredestinatoNew"
                android:textColor="@color/teal_700"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>
